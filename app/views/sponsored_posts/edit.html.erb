<h1>Edit Sponsored Posts</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for sponsored posts:</p>
    <ul>
      <li>Make sure the topic is appropriate.</li>
      <li>Never insult dogs.</li>
      <li>Smile when you type.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @sponsored_post do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter title of sponsored post" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter body of sponsored post" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
          <%= f.number_field :price, class: 'form-control', placeholder: "Enter price here" %>
        <% end %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
